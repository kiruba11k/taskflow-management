{
  "name": "Project",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name"
    },
    "description": {
      "type": "string",
      "description": "Project description and objectives"
    },
    "team_id": {
      "type": "string",
      "description": "ID of the primary team assigned"
    },
    "project_manager_id": {
      "type": "string",
      "description": "ID of the user managing this project"
    },
    "assigned_members": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of user IDs assigned to this project"
    },
    "start_date": {
      "type": "string",
      "format": "date"
    },
    "end_date": {
      "type": "string",
      "format": "date"
    },
    "status": {
      "type": "string",
      "enum": [
        "Planning",
        "Active",
        "On Hold",
        "Completed",
        "Cancelled"
      ],
      "default": "Planning"
    },
    "priority": {
      "type": "string",
      "enum": [
        "Low",
        "Medium",
        "High",
        "Critical"
      ],
      "default": "Medium"
    },
    "budget": {
      "type": "number",
      "minimum": 0
    },
    "progress": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 0
    }
  },
  "required": [
    "name",
    "team_id",
    "project_manager_id"
  ]
}